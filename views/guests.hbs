<table id = "guests-table" border="1" cellpadding="5">
<thead>
    <tr>
        <th><a href="#" onClick="showform('insert')">New</a></th>
        <th></th>
        <th>id</th>
        <th>first name</th>
        <th>last name</th>
        <th>email</th>
        <th>phone</th>
        <th>address</th>
    </tr>
</thead>

{{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
