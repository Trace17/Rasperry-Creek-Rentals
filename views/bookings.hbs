<div id="browse" style="display: block">
    <p><strong>Browse Bookings</strong></p>
    <table border="1" cellpadding="5">
    <thead>
        <tr>
            <th><a href="#" onClick="showform('insert')">New</a></th>
            <th>id</th>
            <th>number of guests</th>
            <th>rental id</th>
            <th>check in</th>
            <th>check out</th>
            <th>total cost ($)</th>
        </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td><a href="#" onClick="deleteBooking('this.bookingID')">Delete</a></td>
            <td>{{this.booking_id}}</td>
            <td>{{this.number_of_guests}}</td>
            <td>{{this.rental_id}}</td>
            <td>{{this.check_in_date}}</td>
            <td>{{this.check_out_date}}</td>
            <td>{{this.total_cost}}</td>
        </tr>
        {{/each}}
    </tbody>

        </table>
        <a href="#" onClick="showform('search')">Search for a Booking</a>
    </div>




    <p>&nbsp;</p>
    <div id="insert" style="display:none">
        <form method="POST" id="addBooking">
            <legend><strong>Add Booking</strong></legend>
                <fieldset class="fields">
                    <label> number of guests </label> <input type="text" name="number of guests">
                    <label> rental id </label> <select name="rental type id">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        </select>
                    <label> check in </label> <input type="date" name="check in">
                    <label> check out </label> <input type="date" name="check out">
                    <label> total cost </label> <input type="number" step="any" name="total cost">
                </fieldset> 
            <fieldset>
                <input class="btn" type="submit" id="addBooking" value="Add Booking">
                <input class="btn" type="button" value="cancel" onClick="browseBookings()">
            </fieldset>
        </form>
    </div>

    <p>&nbsp;</p>
    <div id="delete" style="display: none">
        <form id="deleteBooking">
            <legend><strong>Delete Booking</strong></legend>
                <fieldset class="fields">
                <p>Are you sure you want to delete the following Booking?</p>
                <input type="hidden" name="BookingID" id="deleteBooking">
                <label> ID: </label> 1
                <label> number of guests: </label>"4"
                </fieldset> 
            <fieldset>
                <input class="btn" type="submit" id="deleteBooking" value="Delete">
                <input class="btn" type="button" value="cancel" onClick="browseBookings()">
            </fieldset>
        </form>
    </div>
    


    <p>&nbsp;</p>
    <div id="search" style="display: none">
        <form id="searchBooking">
            <legend><strong>Search for a Booking</strong></legend>
                <fieldset class="fields">
                <p>Provide the ID of the booking you are searching for:</p>
                <label> id </label> <input type="text" name="booking id">
                </fieldset> 
            <fieldset>
                <input class="btn" type="submit" id="searchRentalType" value="Search">
                <input class="btn" type="button" value="cancel" onClick="browseBookings()">
            </fieldset>
        </form>
    </div>

