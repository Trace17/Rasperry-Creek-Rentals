<div id="browse" style="display: block">
    <p><strong>Browse Rental Types</strong></p>
    <table border="1" cellpadding="5">
    <thead>
        <tr>
            <th><a href="#" onClick="showform('insert')">New</a></th>
            <th></th>
            <th>id</th>
            <th>name</th>
            <th>year round</th>
            <th>max occupancy</th>
            <th>cost per night ($)</th>
        </tr>
    </thead>
    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td><a href="#" onClick="updateRentalType('this.rentalTypeID')">Edit</a></td>
            <td><a href="#" onClick="deleteRentalType('this.rentalTypeID')">Delete</a></td>
            <td>{{this.rental_type_id}}</td>
            <td>{{this.rental_type_name}}</td>
            <td>{{this.availability}}</td>
            <td>{{this.occupancy}}</td>
            <td>{{this.cost_per_night}}</td>
        </tr>
        {{/each}}
    </tbody>

    </table>
</div>

<p>&nbsp;</p>
<div id="insert" style="display:none">
    <form method="POST" id="addRentalType">
        <legend><strong>Add Rental Type</strong></legend>
            <fieldset class="fields">
                <label> name </label> <input type="text" name="name">
                <label> year round </label> <select name="year round">
                    <option value="1">yes</option>
                    <option value="2">summer only</option>
                    </select>
                <label> max occupancy </label> <input type="number" name="max occupancy">
                <label> cost per night </label> <input type="number" step="any" name="cost per night">
            </fieldset> 
        <fieldset>
            <input class="btn" type="submit" id="addRentalType" value="Add Rental Type">
            <input class="btn" type="button" value="cancel" onClick="browseRentalTypes()">
        </fieldset>
    </form>
</div>

<p>&nbsp;</p>
<div id="update" style="display:none">
    <form method="POST" id="updateRentalType">
        <legend><strong>Update Rental Type</strong></legend>
            <fieldset class="fields">
                <input type="hidden" name="rentalTypeID" id="updateRentalTypeID" >
                <label> ID: </label> 1
                <label> name </label> <input type="text" name="name">
                <label> year round </label> <select name="year round">
                    <option value="1">yes</option>
                    <option value="2">summer only</option>
                    </select>
                <label> max occupancy </label> <input type="number" name="max occupancy">
                <label> cost per night </label> <input type="number" step="any" name="cost per night">
            </fieldset> 
        <fieldset>
            <input class="btn" type="submit" id="updateRentalType" value="Update Rental Type">
            <input class="btn" type="button" value="cancel" onClick="browseRentalTypes()">
        </fieldset>
    </form>
</div>

